\pkginfo_set:nn { <PackageNAME> }
  {
     name        = {<PackageNAME>} ,
     prefix      = {<PackageNAME>} ,
     date        = {20**/**/**},
     version     = {*1.0*} ,
     description = {<PackageNAME> <PackageDescription>}
  }
